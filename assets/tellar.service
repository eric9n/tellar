[Unit]
Description=Tellar Cyber Steward
After=network.target

[Service]
Type=simple
# The setup script will replace {{GUILD_PATH}} and {{BINARY_PATH}} with actual values
WorkingDirectory={{GUILD_PATH}}
ExecStart={{BINARY_PATH}} --guild {{GUILD_PATH}}
Restart=always
RestartSec=10
# Standard output/error logging
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=default.target
