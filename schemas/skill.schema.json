{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://tellar.dev/schemas/skill.schema.json",
  "title": "Tellar Installed Skill",
  "type": "object",
  "additionalProperties": false,
  "required": ["name", "description", "tools"],
  "properties": {
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 64,
      "pattern": "^[A-Za-z0-9_-]+$"
    },
    "description": {
      "type": "string",
      "minLength": 1,
      "maxLength": 500
    },
    "guidance": {
      "type": "string",
      "minLength": 1,
      "maxLength": 4000
    },
    "tools": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/$defs/tool"
      }
    }
  },
  "$defs": {
    "tool": {
      "type": "object",
      "additionalProperties": false,
      "required": ["name", "description", "parameters", "command"],
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1,
          "maxLength": 64,
          "pattern": "^[A-Za-z0-9_-]+$"
        },
        "description": {
          "type": "string",
          "minLength": 1,
          "maxLength": 500
        },
        "parameters": {
          "$ref": "#/$defs/objectSchema"
        },
        "command": {
          "type": "string",
          "minLength": 1,
          "maxLength": 2000
        }
      }
    },
    "objectSchema": {
      "type": "object",
      "additionalProperties": true,
      "required": ["type"],
      "properties": {
        "type": {
          "const": "object"
        },
        "properties": {
          "type": "object",
          "additionalProperties": true
        },
        "required": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "additionalProperties": {
          "type": ["boolean", "object"]
        }
      }
    }
  }
}
